#!/usr/bin/env bash
#
# @LICENSE  Apache-2.0
# @AUTHOR   Hasnae R.
# @VERSION  1.0.0
#

source selfedit.sh

# @COMMAND audit                            checks for folders larger than 500MB in the current directory
audit() {
    max=$(_default '500000')
    sudo du -k * | awk "\$1 > $max" | sort -nr
}

# @COMMAND portid [port]                    displays process listening on target port
portid() {
    lsof -i :$1
}

eval $@

if [ -z $1 ];
then
    cd ${VIQUEEN_DEVBOX_HOME}
fi